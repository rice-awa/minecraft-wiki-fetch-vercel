{
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/health/(.*)",
      "destination": "/api/index.js"
    },
    {
      "source": "/",
      "destination": "/api/index.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=300, stale-while-revalidate"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "WIKI_BASE_URL": "https://zh.minecraft.wiki",
    "REQUEST_TIMEOUT": "15000",
    "RATE_LIMIT_MAX": "50"
  }
}